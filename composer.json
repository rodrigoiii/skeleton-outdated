{
    "name": "rodrigoiii/framework",
    "description": "Build awesome application using this light but powerful micro framework.",
    "type": "project",
    "license": "MIT",
    "keywords": ["micro framework", "framework", "slim", "php"],
    "authors": [
        {
            "name": "Rodrigo Galura III",
            "email": "rodrigogalura3rd@gmail.com"
        }
    ],
    "minimum-stability": "alpha",
    "require": {
        "php": "^5.6.30 || ^7.0",
        "illuminate/database": "^5.4",
        "monolog/monolog": "^1.23",
        "respect/validation": "^1.1",
        "rodrigoiii/auth-slim": "^0.1.0",
        "slim/csrf": "^0.8.2",
        "slim/flash": "^0.4.0",
        "slim/slim": "^3.9",
        "slim/twig-view": "^2.3",
        "symfony/console": "^3.4",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "kint-php/kint": "^2.2",
        "robmorgan/phinx": "^0.9.2",
        "fzaninotto/faker": "^1.7",
        "phpunit/phpunit": "^5.7",
        "runcmf/runtracy": "^0.2.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Framework\\": "system/classes/"
        },
        "files": [
            "system/functions/function.php",
            "app/helpers.php"
        ]
    },
    "scripts": {
        "post-create-project-cmd": [
            "php command generate:key"
        ],
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
