{% extends "layouts/user.twig" %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">Update User</h1>

            <form role="form" method="POST" action="{{ path_for('user.edit', {id: user.id}) }}">
                {{ csrf.field | raw }}

                <input type="hidden" name="_METHOD" value="PUT">

                <div class="form-group has-feedback {{ errors ? errors.first_name ? "has-error" : "has-success" }}">
                    <label for="first_name">First Name</label>
                    <input type="text" name="first_name" class="form-control" value="{{ oldInput.first_name ?: user.first_name }}" autofocus />
                    {% if errors %}
                    <span class="glyphicon {{ errors.first_name ? "glyphicon-remove" : "glyphicon-ok" }} form-control-feedback"></span>
                    {% endif %}
                    <span class="help-block">{{ errors.first_name | first }}</span>
                </div>

                <div class="form-group has-feedback {{ errors ? errors.last_name ? "has-error" : "has-success" }}">
                    <label for="last_name">Last Name</label>
                    <input type="text" name="last_name" class="form-control" value="{{ oldInput.last_name ?: user.last_name }}" />
                    {% if errors %}
                    <span class="glyphicon {{ errors.last_name ? "glyphicon-remove" : "glyphicon-ok" }} form-control-feedback"></span>
                    {% endif %}
                    <span class="help-block">{{ errors.last_name | first }}</span>
                </div>

                <div class="form-group has-feedback {{ errors ? errors.email ? "has-error" : "has-success" }}">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control" value="{{ oldInput.email ?: user.email }}" />
                    {% if errors %}
                    <span class="glyphicon {{ errors.email ? "glyphicon-remove" : "glyphicon-ok" }} form-control-feedback"></span>
                    {% endif %}
                    <span class="help-block">{{ errors.email | first }}</span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update User" class="btn btn-primary">
                    <a href="{{ path_for('user.list') }}" class="btn btn-default">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="/node_modules/jquery-validation/dist/jquery.validate.js"></script>
<script type="text/javascript" src="/js/app.js"></script>
{% endblock %}
