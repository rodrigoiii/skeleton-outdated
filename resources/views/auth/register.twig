{% extends "auth/layout-auth.twig" %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">Register</h1>

            <form method="POST" action="{{ path_for('auth.register') }}" id="register-form" enctype="multipart/form-data">
                {{ csrf.field | raw }}

                {% include "templates/inputs/image.twig" with {field_name: "picture", enabledQuickLoadImage: true} %}
                {% include "templates/inputs/field.twig" with {field_name: "first_name"} %}
                {% include "templates/inputs/field.twig" with {field_name: "last_name"} %}
                {% include "templates/inputs/field.twig" with {field_name: "email"} %}
                {% include "templates/inputs/password.twig" with {field_name: "password"} %}
                {% include "templates/inputs/password.twig" with {field_name: "confirm_password"} %}

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script type="text/javascript" src="/node_modules/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="/node_modules/jquery-validation/dist/jquery.validate.js"></script>
<script type="text/javascript" src="/node_modules/jquery-validation/dist/additional-methods.js"></script>

<script type="text/javascript" src="/js/jquery-validation/bs3-defaults.js"></script>
<script type="text/javascript" src="/js/jquery-validation/add-methods.js"></script>
<script type="text/javascript" src="/js/app.js"></script>
<script type="text/javascript" src="/js/auth/register.js"></script>
{% endblock %}
