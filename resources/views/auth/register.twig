<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Registration Page</title>

    <link rel="stylesheet" type="text/css" href="/node_modules/bootstrap3/dist/css/bootstrap.css">
</head>
<body>
    {% include "auth/partials/nav.twig" %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">Registration Page</h1>

                {% include "templates/error-list/bootstrap.twig" %}

                <form action="{{ path_for('auth.register') }}" method="POST" role="form">
                    {{ csrf.field | raw }}

                    <div class="form-group">
                        <label for="first_name">First Name</label>
                        <input type="text" class="form-control" name="first_name" value="{{ oldInput.first_name ?: "" }}" autofocus>
                    </div>

                    <div class="form-group">
                        <label for="last_name">Last Name</label>
                        <input type="text" class="form-control" name="last_name" value="{{ oldInput.last_name ?: "" }}">
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" name="email" value="{{ oldInput.email ?: "" }}">
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="/node_modules/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="/node_modules/bootstrap3/dist/js/bootstrap.js"></script>
</body>
</html>