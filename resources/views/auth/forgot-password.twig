{% extends "auth/layouts/app.twig" %}

{% block title %}Forgot Password Page |{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">Forgot Password Page</h1>

            {% include "auth/templates/error-list/bootstrap.twig" %}

            <form action="{{ path_for('auth.forgot-password') }}" method="POST" role="form">
                {{ csrf.field | raw }}

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" name="email" autofocus />
                </div>

                <button type="submit" class="btn btn-primary">Send Email</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}